<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.ckb.member.repository.MemberRepository">
	<resultMap id="memResult" type="member">
		<result property="memId" column="memId" />
        <result property="pwd" column="pwd" />
        <result property="name" column="name" />
        <result property="email" column="email" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
	</resultMap> 

	<select id="selectAllMemberList" resultMap="memResult">
      <![CDATA[
         SELECT * FROM t_member3	
         ORDER BY created_at DESC	 	
      ]]>
	</select>
    
  <insert id="insertMember"  parameterType="member">
	<![CDATA[
		 INSERT INTO t_member3(memId,
		                       pwd, 
		                       name,
		                       nickname, 
		                       email)
		 				VALUES(#{memId}, 
		 				       #{pwd}, 
		 				       #{name},
		 				       #{nickname}, 
		 				       #{email})
	]]>      
	</insert>
	
   
	<update id="updateMember" parameterType="member">
    UPDATE t_member3
    <set>

        <!-- 비밀번호가 값이 있을 때만 업데이트 -->
        <if test="pwd != null and pwd != ''">
            pwd = #{pwd},
        </if>

        <!-- 이름이 값이 있을 때만 업데이트 -->
        <if test="name != null and name != ''">
            name = #{name},
        </if>

        <!-- 닉네임이 값이 있을 때만 업데이트 -->
        <if test="nickname != null and nickname != ''">
            nickname = #{nickname},
        </if>

        <!-- 이메일이 값이 있을 때만 업데이트 -->
        <if test="email != null and email != ''">
            email = #{email},
        </if>

        <!-- updated_at은 항상 갱신 -->
        updated_at = SYSDATE

    </set>
    WHERE memId = #{memId}
  </update>


     
   <delete id="deleteAccount"  parameterType="String">
	<![CDATA[
	   DELETE FROM  t_member3
	   WHERE
	   memId=#{memId}
	]]>      
  </delete>
  <select id="selectrMemberById"  resultType="member"   parameterType="String" >
	<![CDATA[
		SELECT memId,
		       pwd,
		       name,
		       email,
		       nickname,
		       role,
		       created_at,
		       updated_at
		FROM t_member3	
		WHERE memId=#{memId} 
	]]>
  </select>
</mapper>