		      #{goodsWriterIntro},
					
			  #{goodsIntro:VARCHAR},
		      #{goodsPublisherComment:VARCHAR },
		      #{goodsRecommendation :VARCHAR},	
		      #{goodsContentsOrder:VARCHAR}
		 )
]]>
</insert> 
	
